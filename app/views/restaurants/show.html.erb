<div class="container mt-4">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number%></p>
  <p><%= @restaurant.category%></p>
  <hr>
  <h3 class="mb-3"><strong>Reviews</strong></h3>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <div class="container">
        <hr>
        <h6>Review</h6>
        <p class="List-group-item"><%= review.content %></p>
        <h6>Rating</h6>
        <p><%= review.rating %></p>
        <hr>
      </div>
    <% end %>
  </ul>
  <br>
  <%= link_to 'Add review', new_restaurant_review_path(params[:id]), class: "btn btn-success" %>
  <%= link_to 'Go back', restaurants_path, class: "btn btn-primary" %>
</div>
